{
    "servers": {
        "Agentic Workflow": {
            "type": "stdio",
            "command": "python",
            "args": [
                "-m",
                "uv",
                "run",
                "mcp",
                "run",
                "%USERPROFILE%\\agentic-workflow-mcp\\server.py"
            ],
            "env": {
                "WORKSPACE_PATH": "${workspaceFolder}",
                "WORKFLOW_CONFIG_PATH": "${workspaceFolder}/config_examples/complex_evaluator_optimizer_config.json",
            }
        }
    }
}